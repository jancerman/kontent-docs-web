extends ../includes/layout.pug
block content
    .hero
        .hero__wrapper
            h1.hero__heading !{title}
            form.hero__search
                .hero__search-icon(aria-hidden='true')
                label.sr-only(for='nav-search') !{UIMessages && UIMessages.search___placeholder.value}
                input(type='search', id='nav-search', name='nav-search', autocomplete="off", placeholder= UIMessages && UIMessages.search___placeholder.value)
            #searchbox
            div.hero__note-link(href="#") !{introNote}
    main(id='main').presentation
        | !{minify(signposts)}
    aside.border-top
        .cta !{minify(support)}
        
    